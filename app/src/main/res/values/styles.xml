<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/average</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="SearchButton" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/textColorLight</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/nunito_extralight</item>
        <item name="android:padding">16dp</item>
    </style>
</resources>
